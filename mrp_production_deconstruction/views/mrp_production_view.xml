<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="is_deconstruction" invisible="1" />
            </field>
            <field name="forecast_availability" position="attributes">
                <attribute
          name="attrs"
        >{'column_invisible':[('parent.is_deconstruction', '=', True)]}</attribute>
            </field>
        </field>
    </record>


    <record id="mrp_production_form_view2" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp_usability.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath
        expr="//field[@name='move_line_ids']/tree/field[@name='reserved_uom_qty']"
        position="attributes"
      >
                <attribute
          name="attrs"
        >{'column_invisible':[('parent.is_deconstruction', '=', True)]}</attribute>
            </xpath>
            <xpath
        expr="//field[@name='move_line_ids']/tree/field[@name='product_uom_id']"
        position="attributes"
      >
                <attribute
          name="attrs"
        >{'column_invisible':[('parent.is_deconstruction', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="mrp_production_tree_view" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view" />
        <field name="arch" type="xml">
            <field name="activity_exception_decoration" position="after">
                <field name="is_deconstruction" optional="hide" />
            </field>
        </field>
    </record>

    <record id="view_mrp_production_filter" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter" />
        <field name="arch" type="xml">
            <filter name="todo" position="before">
                <filter
          string="Deconstruction"
          name="is_deconstruction"
          domain="[('is_deconstruction', '=', True)]"
        />
                <separator />
            </filter>
            <filter name="filter_date_planned_start" position="after">
                <filter
          string="Yesterday"
          name="yesterday"
          domain="[('date_planned_start', '&lt;', (context_today()).strftime('%Y-%m-%d')), ('date_planned_start','&gt;', (context_today() - datetime.timedelta(days=2)).strftime('%Y-%m-%d'))]"
        />
                <filter
          string="Today"
          name="today"
          domain="[('date_planned_start', '&lt;', (context_today() + datetime.timedelta(days=1)).strftime('%Y-%m-%d')), ('date_planned_start','&gt;', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d'))]"
        />
                <filter
          string="Last Week"
          name="last_week"
          domain="[('date_planned_start','&gt;', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"
        />
                <filter
          string="Last Month"
          name="month"
          domain="[('date_planned_start','&gt;', (context_today() - datetime.timedelta(days=30)).strftime('%%Y-%%m-%%d'))]"
        />
                <filter
          string="Last Year"
          name="year"
          domain="[('date_planned_start','&gt;', (context_today() - datetime.timedelta(days=365)).strftime('%%Y-%%m-%%d'))]"
        />
            </filter>
        </field>
    </record>

</odoo>
